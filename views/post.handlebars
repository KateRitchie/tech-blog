<div class="text">
	<div class="container">
		<div class="row headerRow">
			<div class="col-8">
				<h2 class="postTitle">{{title}}</h2>
			</div>
			<div class="col-4">
				<p class="postCreate text-right">Created by {{user.username}} on {{format_date date_created}}</p>
			</div>
		</div>
		<p class="text-center">{{description}}</p>
		</div>	
</div>

		{{#if loggedIn}}

		<form class="new-comment-form d-flex flex-wrap justify-content-center" data-post={{id}}>
			<div class="textArea p-2">
				<textarea id="comment_description" name="comment-body"
				placeholder="Comments" cols="30" rows="2"></textarea>
			</div>
			<div class="btnComment p-2">
				<button class="button btn btn-success" type="submit">Add Comment</button>
			</div>
		</form>
{{/if}}
		

		<h2 class="text-center">Comments</h2>
		{{#each comments as |comment|}}
		<div>
			<p class="text-center">{{comment.comment_description}}</p>
			<p class="text-center"><span>Created by {{comment.user.username}} on {{format_date date_created}}</span></p>
		</div>
		{{/each}}

		<script src="/js/comment.js"></script>
		